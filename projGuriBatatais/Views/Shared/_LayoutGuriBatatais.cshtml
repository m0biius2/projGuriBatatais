<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        @* titulo do site *@
        <title>Guri Batatais - @ViewData["Title"]</title>
        @* bootstrap online *@
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        @* css *@
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/projGuriBatatais.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/pagInicial.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/rodape.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/magnific-popup.css" asp-append-version="true">
        @* animate *@
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
        @* icons *@
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        @* magnific popup *@
        <link rel="stylesheet" href="magnific-popup/magnific-popup.css">
    </head>
    <body>
        <header>
            @* navbar pc *@
            <div class="d-none d-sm-block d-sm-none d-md-block d-md-none d-lg-block">
                <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-transparent">
                    <div class="container-fluid">
                        @* icone logo *@
                        <a class="navbar-brand" asp-area="" asp-controller="Inicial" asp-action="Index">
                            <img src="~/img/logoGuri.png" alt="Logo Guri." />
                        </a>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Inicial" asp-action="Index"><i class="fas fa-home"></i></a> @* inicio *@
                                </li>
                                <li class="nav-item active1">
                                    <a class="nav-link" asp-area="" asp-controller="Agenda" asp-action="ExibirAgendaPublico">Agenda</a> @* agenda *@
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Agenda" asp-action="TesteProfessor">Informações</a> @* informacoes *@
                                </li>
                            </ul>
                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Cursos
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="#">Cordas Agudas</a></li>
                                        <li><a class="dropdown-item" href="#">Cordas Graves</a></li>
                                        <li><a class="dropdown-item" href="#">Metais</a></li>
                                        <li><a class="dropdown-item" href="#">Madeiras</a></li>
                                        <li><a class="dropdown-item" href="#">Percussão</a></li>
                                        <li><a class="dropdown-item" href="#">Coral</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item active entrar">
                                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Cadastrar">Entrar</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Agenda" asp-action="TesteProfessor"><i class="fas fa-music"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>

            @* navbar mobile *@
            <div class="d-block d-xxl-none d-xl-none d-xxl-block d-lg-none d-xl-block">
                <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-transparent navMobile">
                    <div class="container-fluid">
                        @* icone logo *@
                        <a class="navbar-brand" asp-area="" asp-controller="Agenda" asp-action="TesteProfessor">
                            <img src="~/img/logoGuri.png" alt="Logo Guri." />
                        </a>
                        <div class="ms-auto">
                            <ul class="navbar-nav">
                            <li class="nav-item menu"><a class="nav-link"><span onclick="openNav()"><i class="fas fa-bars"></i></span></a></li>
                            </ul>
                        </div>
                    </div>
                </nav>

                <div id="mySidenav" class="sidenav">
                    <div class="row topSidenav">
                        <div class="col-12">
                            <a class="closebtn" onclick="closeNav()"><i class="fas fa-times"></i></a>
                        </div>
                        <div class="col-12">
                            <h6>Entre para registrar uma conta!</h6>
                        </div>
                        <div class="col-12">
                            <p>Faça seu <a asp-area="" asp-controller="Agenda" asp-action="TesteProfessor">cadastro</a> ou <a asp-area="" asp-controller="Agenda" asp-action="TesteProfessor">login</a>...</p>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        @* conteudo *@
        <main role="main">
            @RenderBody()
        </main>
        @* jquery padrao *@
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        @* nosso jquery *@
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/entrar.js" asp-append-version="true"></script>
        <script src="~/js/magnific-popup.js" asp-append-version="true"></script>
        <script src="~/js/pdf.js" asp-append-version="true"></script>
        @* plugin jquery mask *@
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.11.4/jquery.mask.min.js"></script>
        @* plugin sweetalert *@
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        @* plugin magnific popup *@
        <script src="~/magnific-popup/jquery.magnific-popup.js"></script>
        <script src="~/js/jquery.magnific-popup.js"></script>
        <script src="~/js/jquery.magnific-popup2.js"></script>
        @* plugin pdf *@
        <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf.worker.min.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
